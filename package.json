{
  "name": "react-vite-app",
  "version": "1.0.0",
  "description": "A React application using Vite, JWT authentication, and role-based access control.",
  "main": "index.js",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "serve": "vite preview",
    "lint": "eslint src --ext .jsx,.js",
    "format": "prettier --write \"src/**/*.{js,jsx,json,css,md}\""
  },
  "keywords": [
    "react",
    "vite",
    "jwt",
    "authentication",
    "role-based",
    "dashboard"
  ],
  "author": "labsinet",
  "license": "MIT",
  "dependencies": {
    "@vitejs/plugin-react": "^4.0.0",
    "axios": "^1.3.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-router-dom": "^6.8.0"
  },
  "devDependencies": {
    "vite": "^4.0.0",
    "eslint": "^8.33.0",
    "eslint-config-prettier": "^8.6.0",
    "eslint-plugin-react": "^7.32.0",
    "prettier": "^2.8.0"
  },
  "eslintConfig": {
    "env": {
      "browser": true,
      "es2021": true
    },
    "extends": [
      "eslint:recommended",
      "plugin:react/recommended",
      "prettier"
    ],
    "parserOptions": {
      "ecmaFeatures": {
        "jsx": true
      },
      "ecmaVersion": 12,
      "sourceType": "module"
    },
    "plugins": [
      "react"
    ],
    "rules": {
      "react/react-in-jsx-scope": "off"
    }
  },
  "prettier": {
    "semi": true,
    "singleQuote": true,
    "trailingComma": "es5",
    "printWidth": 80
  }
}